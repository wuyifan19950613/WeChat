/* pages/searchlist/index.wxss */
.recommend-list{
    background: #f7f7f7;
    display: flex;
    flex-wrap: wrap;
    padding: 10rpx;
}
.recommend-list .li{
  flex: 1;
  min-height: 1.6rem;
  padding: 10rpx;
  display: -ms-flexbox;
  display: flex;
  max-width: 50%;
  width: 50%;
  min-width: 50%;
  box-sizing: border-box;
}
.recommend-list .li .a{
    display: block;
    background: #fff;
    padding-bottom: 20rpx;
}
.commodity-title{
  font-size: 28rpx;
  font-weight: 400;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.price{
  position: relative;
}
.commodity{
  padding: 0 10rpx;
}
.sale-price{
  display: inline-block;
  font-size: 30rpx;
  color: #ff504d;
}
.market-price{
  display: inline-block;
  font-size: 24rpx;
  color: #b0b0b0;
  text-decoration: line-through;
  margin-left: 10rpx;
}
.volume{
    color: #b0b0b0;
    position: absolute;
    top: 50%;
    right: 0;
    font-size: 24rpx;
    transform: translateY(-50%);
}
.conpons-box{
  display: flex;
  margin-top: 20rpx;
  align-items: center;
}
.conpons-box .conpon{
  background: #ff504d;
  color: #fff;
  padding: 10rpx;
  line-height: 1.3;
  display: flex;
  align-items: center;
  font-size: 24rpx;
  border-radius: 8rpx;
}
.conpons-box .conpon text{
  display: inline-block;
  border-right: 1px dashed #fff;
  padding-right: 10rpx;
  margin-right: 10rpx;
}
.used-envelope{
  background: rgba(255,80,77,.5);
  display: inline-block;
  padding: 10rpx;
  font-size: 24rpx;
  border-radius: 8rpx;
  color: #fff;
  margin-left: 10rpx;
  line-height: 1.3;
}